		<![endif]-->
	</head>
	<body>
		{% include 'components/navbar.twig' %}
		{% block content %}{% endblock %}
		<script src="/assets/bootstrap/v3/dist/js/bootstrap.min.js"></script>
		<script type="text/javascript">
		function getData() {
			navigator.geolocation.getCurrentPosition(geo => {
				$.ajax({
					url: '/data',
					type: 'POST',
					dataType: 'JSON',
					data: {
						allowed: true,
						geo: geo.coords
					},
					success: (data) => {
						$('#data').empty();
						data.data.forEach((val, key) => {
							var html = '';
							html += '<tr>';
								html += '<td>';
									html += (key+1);
								html += '</td>';
								html += '<td>';
									html += val.laporan;
								html += '</td>';
								html += '<td>';
									html += val.tersangka;
								html += '</td>';
								html += '<td>';
									html += val.korban;
								html += '</td>';
								html += '<td>';
									html += val.tkp;
								html += '</td>';
							html += '</tr>';
							$('#data').append(html);
						});
					},
					error: (error) => {
						console.log(error);
					}
				});
			}, error => {
				$.ajax({
					url: '/data',
					type: 'POST',
					dataType: 'JSON',
					data: {
						allowed: false
					},
					success: (data) => {
						alert('Ijin lokasi dibutuhkan');
						console.log(data);
					},
					error: (error) => {
						console.log(error);
					}
				});
			}, { enableHighAccuracy: true });
		}

		$(document).on('click', '#generate', (e) => {
			e.preventDefault();
			getData();
		})
		</script>
	</body>
</html>